CC = g++
CFLAGS = -c -Wall

STATIC_OBJECTS = SchoolClass.o SchoolDatabase.o
STATIC_LIB = libschool.a

STATIC_DIR = ./static

all: $(STATIC_DIR)/$(STATIC_LIB)

$(STATIC_DIR)/$(STATIC_LIB): $(addprefix $(STATIC_DIR)/, $(STATIC_OBJECTS))
	ar rcs $@ $^

$(STATIC_DIR)/%.o: %.cpp
	$(CC) $(CFLAGS) $< -o $@
	
clean:
	rm -f $(STATIC_DIR)/*.o $(STATIC_DIR)/$(STATIC_LIB)
